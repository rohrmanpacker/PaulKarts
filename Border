package paulkarts;

import java.util.ArrayList;
import javafx.geometry.Rectangle2D;
import javafx.scene.canvas.GraphicsContext;
import javafx.scene.paint.Color;

public class Border{
	private int width, height;
	
	public Border(int height, int width){
		this.height=height;
		this.width=width;
	}
	
	public Border(){
		this(600,800);
	}
	
	public ArrayList<Rectangle2D> getBorder(){
		ArrayList<Rectangle2D> borders = new ArrayList<Rectangle2D>();
		
		
		return borders;
	}
	
	public static ArrayList<Rectangle2D> getBorder(int height, int width){//Rectangle2D(double minX, double minY, double width, double height)
		ArrayList<Rectangle2D> borders = new ArrayList<Rectangle2D>();
		borders.add(new Rectangle2D(-20,-20,width+40,25));//top 
		//borders.add(new Rectangle2D(0,0,width,5)) this was the original
		borders.add(new Rectangle2D(-20,-20,25,height+40));//left
		//borders.add(new Rectangle2D(0,0,5,height)); this was the original
		borders.add(new Rectangle2D(width-5,0,width,height));//right
		borders.add(new Rectangle2D(0,height-5,width,height));//bottom
		borders.add(new Rectangle2D(.4*width,0,.1*width,.3*height));
		borders.add(new Rectangle2D(.7*width, .3*height, .07*width, .45*height));
		borders.add(new Rectangle2D(.2*width,.5*height,.5*width,.1*height));
		borders.add(new Rectangle2D(.15*width, .3*height, .07*width, .45*height));
		
		
		return borders;
	}
	public static void drawBoundries(GraphicsContext gc,int height,int width){//Rectangle2D(double minX, double minY, double width, double height)
		gc.setFill(Color.BLACK);
		gc.setStroke(Color.BLACK);
		gc.fillRect(0,0,width,5);
		gc.fillRect(0,0,5,height);
		gc.fillRect(width-5,0,width,height);
		gc.fillRect(0,height-5,width,height);
		gc.fillRect(.4*width,0,.1*width,.3*height);
		gc.fillRect(.7*width, .3*height, .07*width, .45*height);
		gc.fillRect(.2*width,.5*height,.5*width,.1*height);
		gc.fillRect(.15*width, .3*height, .07*width, .45*height);
		
	}
	
	public static ArrayList<Rectangle2D> getTurnLeft(GraphicsContext gc,int height, int width){//Rectangle2D(double minX, double minY, double width, double height)
		ArrayList<Rectangle2D> rects = new ArrayList<Rectangle2D>();
		rects.add(new Rectangle2D(0,0,width*.4,height*.3));
		
		
		gc.setFill(Color.BLUE);
		gc.fillRect(0,0,width*.4,height*.3);
		gc.setFill(Color.BLACK);
		return rects;
		
	}
	

}
